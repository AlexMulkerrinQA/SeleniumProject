FROM ubuntu
MAINTAINER blubber:alex

RUN apt-get update
RUN apt-get install wget openjdk-8-jdk -y
RUN wget -q  http://selenium-release.storage.googleapis.com/3.0/selenium-server-standalone-3.0.1.jar
COPY config.json /opt/selenium/

EXPOSE 5555
ENTRYPOINT java -jar selenium-server-standalone-3.0.1.jar -role node -hub http://52.209.247.188:4444/grid/register -nodeConfig /opt/selenium/config.json -port 5555 && bash

